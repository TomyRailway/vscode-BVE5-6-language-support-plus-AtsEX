{
    "name": "bve5-language-suport",
    "displayName": "Bve5 Language Suport",
    "description": "bve5.7 language support",
    "version": "0.0.1",
    "publisher": "aoisupersix",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "languages": [
            {
                "id": "bve-map-2.02",
                "aliases": [
                    "Bve5 Map 2.02",
                    "bve5-map"
                ],
                "firstLine": "^BveTs\\s*Map\\s*2.02",
                "configuration": "./lang_config/bve5-map-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bve-map-2.02",
                "scopeName": "source.bve-map-2.02",
                "path": "./syntaxes/bve-map-2.02.json"
            }
        ],
        "snippets": [
            {
                "language": "bve-map-2.02",
                "path": "./snippets/bve-map-2.02.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
